   	<!-- 743,254 -->
   	
   	<quest name="catap1" locked="false">
   	    <trigger>
   	        <location name="canyon" pos="562,338" radius="2"/>
   	    </trigger>
   	    <action>
   	        <exec script="vultureCatap(520, 184, 566-25, 281-8, 'stone1', 'branch1')"/>
   	    </action>
