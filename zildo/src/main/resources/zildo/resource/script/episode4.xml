   	        </if>
   	        <perso who="loc:arg0" rotation="2"/>
   	        <wait value="4"/>
       	    <exec script="popSand(x,y)"/>
       	    <perso who="loc:arg0" rotation="3"/>
   	        <wait value="4"/>
   	    </loop>
   	</scene>
   	
   	<scene id="popSand">
